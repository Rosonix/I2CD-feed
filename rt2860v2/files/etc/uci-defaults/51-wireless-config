cat > /etc/config/wireless << EOF

config wifi-device 'radio0'
	option type 'rt2860v2'
	option variant 'RT2860'
	option country 'US'
	option hwmode '11g'
	option htmode 'HT40'
	option channel 'auto'

config wifi-iface 'ap'
	option device 'radio0'
	option mode 'ap'
	option network 'lan'
	option ifname 'ra0'
	option ssid 'OpenWrt'
	option encryption 'none'

config wifi-iface 'sta'
	option device 'radio0'
	option mode 'sta'
	option network 'wan'
	option ifname 'apcli0'
	option disabled '1'
EOF

exit 0
